@model LoginUser

<p class="lead title">Welcome to the Event Center!</p>
<div>
    <h1 class="display-4">Login to this site!</h1>
    <a href="/">Need to register?</a>
</div>

<form asp-action="Login" asp-controller="home" method="post">
    <span asp-validation-for="email"></span><br>
    <label asp-for="email"></label>
    <input asp-for="email"></input><br>

    <span asp-validation-for="password"></span><br>
    <label asp-for="password"></label>
    <input asp-for="password"></input><br>

    <button class="btn btn-info">Login</button>
</form>